{{> header}}
{{#game}}
<div class="row">
	<!-- The Other Player's Piles -->
	{{#otherPlayers}}
		{{this}}
			<div class="pile col-md-3">
				<div class="card">
					This player has {{size}} cards left.
				</div>
			</div>
		{{this}}
	{{/otherPlayers}}
</div>
<div class="row">
	<!-- The NorthWest, North, and North East Piles -->
	<div class="pile col-md-3">
		{{#northWestPile}}
			<div class="card col-md-3">
			{{number}} {{{suit.html}}}
			</div>
		{{/northWestPile}}
		{{^northWestPile}}
			<div class="emptyPile col-md-3"></div>
		{{/northWestPile}}
	</div>
	<div class="pile col-md-3">
		{{#northPile}}
			<div class="card col-md-3">
			{{number}} {{{suit.html}}}
			</div>
		{{/northPile}}
	</div>
	<div class="pile col-md-3">
		{{#northEastPile}}
			<div class="card col-md-3">
			{{number}} {{{suit.html}}}
			</div>
		{{/northEastPile}}
		{{^northEastPile}}
			<div class="emptyPile col-md-3"></div>
		{{/northEastPile}}
	</div>
</div>
<div class="row">
	<!-- The West, Draw, and East Piles -->
	<div class="pile col-md-3">
		{{#westPile}}
			<div class="card col-md-3">
			{{number}} {{{suit.html}}}
			</div>
		{{/westPile}}
	</div>
	<div class="card col-md-3">Draw Pile has {{drawPile.size}} cards remaining.</div>
	<div class="pile col-md-3">
		{{#eastPile}}
			<div class="card col-md-3">
			{{number}} {{{suit.html}}}
			</div>
		{{/eastPile}}
	</div>
</div>
<div class="row">
	<!-- The SouthWest, South, and SouthEast Pile -->
	<div class="pile col-md-3">
		{{#southWestPile}}
			<div class="card col-md-3">
			{{number}} {{{suit.html}}}
			</div>
		{{/southWestPile}}
		{{^southWestPile}}
			<div class="emptyPile col-md-3"></div>
		{{/southWestPile}}
	</div>
	<div class="pile col-md-3">
		{{#southPile}}
			<div class="card col-md-3">
			{{number}} {{{suit.html}}}
			</div>
		{{/southPile}}
	</div>
	<div class="pile col-md-3">
		{{#southEastPile}}
			<div class="card col-md-3">
			{{number}} {{{suit.html}}}
			</div>
		{{/southEastPile}}
		{{^southEastPile}}
			<div class="emptyPile col-md-3"></div>
		{{/southEastPile}}		
	</div>
</div>
<div class="row">
Your hand:
<div class="viewingHand">
	{{#userHand}}
		<div class="card col-md-3">
		{{number}} {{{suit.html}}}
		</div>
	{{/userHand}}
</div>
</div>
{{/game}}
{{> footer}}